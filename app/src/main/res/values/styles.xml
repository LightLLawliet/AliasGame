<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="robotoMedium">
        <item name="android:fontFamily">@font/roboto_medium_g</item>
        <item name="android:gravity">bottom|center</item>
    </style>

    <style name="upMainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">40dp</item>
        <item name="android:letterSpacing">.01</item>
        <item name="android:paddingVertical">19dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_blue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="fragmentTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_medium_g</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mainRoundButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/main_blue</item>
        <item name="android:letterSpacing">.01</item>
        <item name="android:paddingHorizontal">55dp</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="gameRoundButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/main_blue</item>
        <item name="android:letterSpacing">.01</item>
        <item name="android:paddingHorizontal">40dp</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="buttonNavigateText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/roboto_medium_g</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/main_blue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="answer_style">
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/roboto_flex</item>
        <item name="android:gravity">bottom</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="riddle_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">8</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/roboto_medium_g</item>
        <item name="android:maxLines">20</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="subtitle_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">14dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="underline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/main_blue</item>
    </style>

    <style name="description_style">
        <item name="android:paddingHorizontal">3dp</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="about_us_description_style">
        <item name="android:paddingHorizontal">5dp</item>
        <item name="fontFamily">@font/roboto_medium_g</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_marginVertical">@dimen/margin_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
</resources>